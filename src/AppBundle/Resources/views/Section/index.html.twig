{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
		<div class="col-md-12">

			<div class="row">
				<div class="col-md-4">
					<div style="padding-left: 0px;">
						<div class="card card-stats">
							<div class="card-header" data-background-color="rose">
								<i class="material-icons">view_list</i>
							</div>
							<div class="card-content">
								<p class="section">Categories list</p>
								<h3 class="card-title">{{sections|length}}</h3>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
				<br>

					<a href="{{path("app_section_add")}}" class="btn btn-rose btn-lg pull-right add-button" title=""><i class="material-icons" style="font-size: 52px;">add_box</i> NEW CATEGORY </a>
				</div>
       		</div>
			<div class="card">
			    <div class="card-content">
			        <div class="table-responsive">
			            <table class="table" width="100%">
			                <thead class="text-primary">
			                    <th width="70px">#</th>
			                    <th width="20px">ID</th>
			                    <th> Title</th>
			                    <th width="300px">Action</th>
			                </tr></thead>
			                <tbody>
			                {% for section in sections %}
			                    <tr>
			                        <td><img src="{{asset(section.media.link)|imagine_filter('section_thumb')}}" style="width:70px; height:70px;    border-radius: 5px;" ></td>
			                        <td>{{section.id}}</td>
			                        <td>{{section.title}}</td>
			                        <td>
		                                <a href="{{path("app_section_edit",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-primary btn-xs btn-round" data-original-title="Edit">
		                                    <i class="material-icons">edit</i>
		                                </a>
		                                <a href="{{path("app_section_delete",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-danger btn-xs btn-round" data-original-title="Delete">
		                                    <i class="material-icons">delete</i>
		                                </a>
		                                <a href="{{path("app_section_view",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-success btn-xs btn-round" data-original-title="Sub-categories">
		                                    <i class="material-icons">list</i>
		                                </a>
		                               <a href="{{path("app_section_up",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Up">
		                                  <i class="material-icons">keyboard_arrow_up</i>
		                                </a>
		                                <a href="{{path("app_section_down",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Down">
											<i class="material-icons">keyboard_arrow_down</i>
		                                </a>
			                        </td>
			                    </tr>
			                    {% else %}
						          <tr>
							          <td colspan="4">
								          <br>
								          <br>
								          <center><img src="{{asset("img/bg_empty.png")}}"  style="width: auto !important;" =""></center>
							              <br>
							              <br>
							          </td>
						          </tr>	
								{% endfor %}
			                </tbody>
			            </table>

			        </div>
	    		</div>

	    	</div>
	    </div>
	</div>
                            
{% endblock%}
