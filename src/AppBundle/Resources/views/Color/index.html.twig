{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
		<div class="col-md-12">

			<div class="row">
				<div class="col-md-4">
					<div style="padding-left: 0px;">
						<div class="card card-stats">
							<div class="card-header" data-background-color="rose">
								<i class="material-icons">color_lens</i>
							</div>
							<div class="card-content">
								<p >Colors list</p>
								<h3 class="card-title">{{colors|length}}</h3>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-8">
				<br>
					<a href="{{path("app_color_add")}}" class="btn btn-rose btn-lg pull-right add-button" title=""><i class="material-icons" style="font-size: 52px;">add_box</i> NEW Color </a>
				</div>
       		</div>
			<div class="card">
			    <div class="card-content">
			        <div class="table-responsive">
			            <table class="table" width="100%">
			                <thead class="text-primary">
			                    <th>ID</th>
			                    <th>Color title</th>
			                    <th>Color</th>
			                    <th>Status</th>
			                    <th width="300px">Action</th>
			                </tr></thead>
			                <tbody>
			                {% for color in colors %}
			                    <tr>
			                        <td>{{color.id}}</td>
			                        <td>{{color.title}}</td>
			                        <td><span class="label" style="background-color:#{{color.code}};padding:7px">#{{color.code}}</span></td>
			                        <td>
			                        {% if color.enabled %}
			                            <span class="label label-success">Enabled</span>

			                        {% else %}
			                            <span class="label label-danger">Disabled</span>

			                        {% endif %}
			                        </td>
			                        <td>
		                                <a href="{{path("app_color_edit",{"id":color.id})}}" rel="tooltip" data-placement="left" class=" btn btn-primary btn-xs btn-round" data-original-title="Edit">
		                                    <i class="material-icons">edit</i>
		                                </a>
		                                <a href="{{path("app_color_delete",{"id":color.id})}}" rel="tooltip" data-placement="left" class=" btn btn-danger btn-xs btn-round" data-original-title="Delete">
		                                    <i class="material-icons">delete</i>
		                                </a>
		                                <a href="{{path("app_color_up",{"id":color.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Up">
		                                  <i class="material-icons">keyboard_arrow_up</i>
		                                </a>
		                                <a href="{{path("app_color_down",{"id":color.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Down">
											<i class="material-icons">keyboard_arrow_down</i>
		                                </a>
			                        </td>
			                    </tr>
			                    {% else %}
						          <tr>
							          <td colspan="5">
								          <br>
								          <br>
								          <center><img src="{{asset("img/bg_empty.png")}}"  style="width: auto !important;" =""></center>
							              <br>
							              <br>
							          </td>
						          </tr>	
								{% endfor %}
			                </tbody>
			            </table>

			        </div>
	    		</div>

	    	</div>
	    </div>
	</div>
                            
{% endblock%}
